#!/usr/bin/env bash
set -o errexit

# params
if [ "$#" -lt 1 ]
then
	echo "$0 (release|debug) [<crag-parameter> ...]"
	exit 1
fi

FOLDER="$1"
JOBS="-j1"
shift 1

# dump core files
ulimit -c unlimited

# delete old core files
rm core || true
rm core.* || true

# build and run or dump the crash stack
make -C "$FOLDER" "$JOBS" crag&&"$FOLDER"/bin/crag $@||./bt "$FOLDER"
